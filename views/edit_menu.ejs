
<%- include('partials/header') %>


  <h1>Edit Menu Item</h1>
  <form method="POST" action="/menu/<%= menuItem.id %>">
    <input type="text" name="name" value="<%= menuItem.name %>" required><br>
    <input type="number" step="0.01" name="price" value="<%= menuItem.price %>" required><br>
    <label>
      <input type="checkbox" name="availability" <%= menuItem.availability ? 'checked' : '' %>>
      Available
    </label><br>
    <button type="submit">Update Item</button>
  </form>
  <p><a href="/restaurants/<%= menuItem.restaurant_id %>/menu">Back to Menu</a></p>
<%- include('partials/footer') %>
